{
  "name": "mail-assistant",
  "version": "1.0.0",
  "description": "Mail assistant",
  "main": "dist/worker.js",
  "scripts": {
    "build": "nest build",
    "debug": "IS_DAEMON=true ts-node src/worker.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:daemon:prod": "IS_DAEMON=true pm2 start src/worker.ts --name mail-assistant",
    "start:daemon:dev": "IS_DAEMON=true ts-node src/worker.ts --env",
    "start:web:prod": "pm2 start src/web/main.ts --name mail-assistant-web",
    "start:web:dev": "ts-node src/web/main.ts",
    "start:all:prod": "concurrently \"npm run start:daemon:prod\" \"npm run start:web:prod\"",
    "start:all:dev": "concurrently \"npm run start:daemon:dev\" \"npm run start:web:dev\""
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.5.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "@langchain/anthropic": "^0.3.13",
    "@langchain/core": "^0.3.40",
    "@langchain/google-vertexai": "^0.1.8",
    "@langchain/groq": "^0.1.3",
    "@langchain/mistralai": "^0.2.0",
    "@langchain/openai": "^0.4.4",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "googleapis": "^144.0.0",
    "ioredis": "^5.5.0",
    "langchain": "^0.3.15",
    "open": "^10.1.0",
    "pg": "^8.13.3",
    "pm2": "^5.4.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}