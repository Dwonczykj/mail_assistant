{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Daemon `npm debug`",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Launch Index.ts `npm desktop`",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "run-script",
        "desktop"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Launch WebAPI `npm start:web:dev`",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "run-script",
        "start:web:dev"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Debug Tests NPM",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "run-script",
        "test"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Daemon",
      "program": "${workspaceFolder}/src/worker.ts",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Web API",
      "program": "${workspaceFolder}/src/web/main.ts",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Debug All",
      "configurations": [
        "Debug Daemon",
        "Debug Web API"
      ]
    }
  ]
}